%ul.nav.nav-tabs
  %li.active=link_to tag_icon(:list, pat(:list)), url(:records, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:records, :new)

.tabs-content
  %table#list.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th.header.list-menu
          .dropdown
            %a.list-menu-toggle.dropdown-toggle{:href => '#', :'data-toggle' => :dropdown}
              =tag_icon :magic
              %span.caret
            %ul.list-menu.dropdown-menu{:role => :menu}
              %li.list-menu-wrapper=link_to tag_icon(:check, pat(:select_all)), '#', :id => 'select-all', :class => 'list-menu-link'
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:'check-empty', pat(:deselect_all)), '#', :id => 'deselect-all', :class => 'list-menu-link list-menu-link-disabled'
              %li.list-menu-divider.divider
              %li.list-menu-wrapper.list-menu-wrapper-disabled
                =link_to tag_icon(:trash, pat(:delete_selected)), '#', :id => 'delete-selected', :class => 'list-menu-link list-menu-link-disabled'
                .list-menu-popover-delete-selected.popover.right
                  .arrow
                  %h3.popover-title=pat(:delete_selected_title)
                  .popover-content
                    -form_tag url(:records, :destroy_many), :method => :delete do
                      =hidden_field_tag :record_ids, :'data-delete-many-ids' => true
                      =submit_tag pat(:delete), :class =>'list-menu-popover-delete-selected-btn btn btn-danger btn-small'
                      .btn.btn-small.cancel=pat(:cancel)
        %th.header= mat(:record, :created_at)
        %th.header= mat(:record, :updated_at)
        %th.header= mat(:record, :dn)
        %th.header= mat(:record, :name)
        %th.header= mat(:record, :mail)
        %th.header= mat(:record, :departments)
        %th.header= mat(:record, :phone)
        %th.header= mat(:record, :title)
        %th.header= mat(:record, :mobile)
        %th.header= mat(:record, :active)
        %th.header.list-row-action-header

    %tbody
      -@records.each do |record|
        %tr.list-row
          %td.list-column.list-selectable
            =check_box_tag 'record_ids[]', :value => record.id, :class => 'list-selectable-checkbox'
          %td.list-column=time_ago_in_words record.created_at
          %td.list-column=time_ago_in_words record.updated_at
          %td.list-column=record.dn
          %td.list-column=record.name
          %td.list-column=record.mail
          %td.list-column=record.departments
          %td.list-column=record.phone
          %td.list-column=record.title
          %td.list-column=record.mobile
          %td.list-column=record.active
          %td.list-column.list-row-action
            .list-row-action-wrapper
              =link_to tag_icon(:edit), :href => url(:records, :edit, :id => record.id), :rel => :tooltip, :title => "#{pat(:edit)} record", :class => 'list-row-action-wrapper-link'
              =link_to tag_icon(:trash), :rel => :tooltip, :title => "#{pat(:delete)} record", :class => 'list-row-action-delete-one list-row-action-wrapper-link'
              .popover.list-row-action-popover-delete-one.left
                .arrow
                %h3.popover-title=pat(:delete, :model => "record")
                .popover-content
                  -form_tag url(:records, :destroy, :id => record.id), :method => :delete do
                    =submit_tag pat(:delete), :class =>'list-row-action-popover-delete-one-btn btn btn-danger btn-small'
                    .btn.btn-small.cancel=pat(:cancel)
